# Server Configuration
PORT=3000
NODE_ENV=development
API_PREFIX=api/v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fundshield
DB_USER=postgres
DB_PASSWORD=password
DB_SYNCHRONIZE=false
DB_LOGGING=true

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=7d

# Starknet Configuration
STARKNET_NETWORK=testnet
STARKNET_RPC_URL=https://starknet-testnet.public.blastapi.io
STARKNET_PRIVATE_KEY=your-private-key
STARKNET_ACCOUNT_ADDRESS=your-account-address

# External APIs
KYC_API_KEY=your-kyc-api-key
KYC_API_URL=https://api.kyc-provider.com
EMAIL_API_KEY=your-email-api-key
EMAIL_API_URL=https://api.email-provider.com

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Monitoring
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log